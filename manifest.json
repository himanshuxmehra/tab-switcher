{
    "manifest_version": 3,
    "name": "Quick Tab Switcher",
    "version": "1.0",
    "description": "Quickly switch between tabs or navigate to a new URL.",
    "permissions": [
        "tabs"
    ],
    "background": {
        "scripts": ["src/background.js"]
    },
    "action": {
        "default_popup": "src/popup.html"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Space",
                "mac": "Command+Space"
            },
            "description": "Open the quick switcher"
        }
    }
}